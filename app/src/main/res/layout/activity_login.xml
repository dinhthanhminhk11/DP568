<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_F6F7FE"
    tools:context=".ui.activity.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/be_logo" />

    <TextView
        android:id="@+id/titleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Đăng nhập"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLogin"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_edittext"
        android:drawablePadding="16dp"
        android:hint="Số tài khoản"
        android:inputType="text"
        android:paddingVertical="20dp"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:textColorHint="@color/color_text_login"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_edittext"
        android:drawablePadding="16dp"
        android:hint="Mật khẩu"
        android:inputType="text"
        android:paddingVertical="20dp"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:textColorHint="@color/color_text_login"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_accuracy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_weight="3"
            android:background="@drawable/background_edittext"
            android:drawablePadding="16dp"
            android:hint="Mã xác thực"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:paddingLeft="25dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_text_login"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/accuracy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@drawable/background_edittext"
            android:drawablePadding="16dp"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:paddingLeft="25dp"
            android:text="5678"
            android:textColor="@color/black"
            android:textColorHint="@color/color_text_login"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/orThor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Hãy thử nó"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orThor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Forgot your password"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@null" />
</RelativeLayout>